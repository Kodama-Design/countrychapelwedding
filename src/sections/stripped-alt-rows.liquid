        "label": "Alt Rows Title"
    }],
    "blocks": [{
        "type": "slide",
        "name": "Slide",
        "settings": [{
            "id": "title",
            "type": "text",
            "label": "Title"
        }, {
            "id": "content",
            "type": "textarea",
            "label": "Content"
        }, {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
        }]
    }]
}
{% endschema %}
